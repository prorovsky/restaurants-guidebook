<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Редактировать <%= restaurant.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[name]" value="<%= restaurant.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[adress]" value="<%= restaurant.adress %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[cuisine]" value="<%= restaurant.cuisine %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="restaurant[capacity]" value="<%= restaurant.capacity %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[description]" value="<%= restaurant.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[image]" value="<%= restaurant.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Отправить</button>
                </div>
            </form>
             <a href="/restaurants">Список ресторанов</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>