<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Добавить новый ресторан</h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/restaurants" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[name]" placeholder="название">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[adress]" placeholder="адрес">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[cuisine]" placeholder="кухня">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="restaurant[capacity]" placeholder="вместимость">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="restaurant[price]" placeholder="цена в среднем">
                </div>   
                <div class="form-group">
                    <textarea class="form-control" rows="5" cols="50" name="restaurant[description]" placeholder="описание ресторана"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[image]" placeholder="ссылка на фото">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Отправить</button>
                </div>
            </form>
             <a href="/restaurants">Список ресторанов</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>