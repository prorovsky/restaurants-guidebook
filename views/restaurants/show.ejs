<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Вкусно Пахнет</p>
            <div class="list-group">
                <li class="list-group-item active">Информация 1</li>
                <li class="list-group-item">Информация 2</li>
                <li class="list-group-item">Информация 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= restaurant.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Cредний заказ <strong>50BYN</strong></h4>
                    <h3><%= restaurant.name %></h3>
                    <p><%= restaurant.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/restaurants/<%= restaurant._id %>/comments/new">Добавить комментарий</a>
                </div>
                <hr>
                <% restaurant.comments.forEach((comment) => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong> 
                            <span class="pull-right">10 дней назад</span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>   
                <% }); %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>