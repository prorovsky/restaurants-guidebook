<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Новый комментарий к <%= restaurant.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/restaurants/<%= restaurant._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="5" cols="50" name="comment[text]" placeholder="Оставьте комментарий"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Отправить</button>
                </div>
            </form>
             <a href="/restaurants">Список ресторанов</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>